<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.festivalBooking.user.dao.UserDAO">
	<select id="selectUserListTest"
 	parameterType="map" resultType="com.festivalBooking.user.model.User">
 		SELECT
 			`id`
 			,`name`
 			,`loginId`
 			,`password`
 			,`email`
 			,`profileImageUrl`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`user`
 	</select>
 	
 	<select id="existLoginId" parameterType="String" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>

	<insert id="insertUser" parameterType="map">
		Insert into `user`
 		(
 			`name`
 			,`loginId`
 			,`password`
 			,`email`
 			,`profileImageUrl`
 			,`createdAt`
 			,`updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			,#{loginId}
 			,#{password}
 			,#{email}
 			,#{imagePath}
 			,Now()
 			,Now()
 		)
	</insert>
	
	<select id="selectUserByLoginIdPassword"
 	parameterType="map" resultType="com.festivalBooking.user.model.User">
 		SELECT
 			`id`
 			,`name`
 			,`loginId`
 			,`password`
 			,`email`
 			,`profileImageUrl`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `password` = #{password}
 	</select>
</mapper>